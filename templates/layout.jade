doctype html
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title=page.title  + " | " + locals.name
      link(rel='stylesheet', href='//fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic|Anonymous+Pro:400,700,400italic,700italic|Merriweather:400,700,300')
      link(rel='stylesheet', href=contents.css['main.css'].url)
      | !{ livereloadScript }
  body(class=bodyclass)
    header.header
      div.content-wrap
        block header
          div
            img(src="img/logo.png")
            h1
              a(href=locals.url)=locals.name
    div#content
      div.content-wrap
        block content
          h2 This page intentionally left blank
    footer
      div.content-wrap
        block footer
          section.copy
            p Contact us at 
              a(href="mailto:" + locals.email)=locals.email